<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContactNameTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactEmailTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactAddressTextStyle" parent="ContactEmailTextStyle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ContactDataTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactDataTypeTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TranslucentStatusTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    
</resources>